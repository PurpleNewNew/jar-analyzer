<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="me.n1ar4.jar.analyzer.core.mapper.JarMapper">
    <insert id="insertJar" parameterType="JarEntity">
        INSERT INTO jar_table
        (jar_name, jar_abs_path)
        VALUES
        <foreach collection="list" separator="," item="item">
            (#{item.jarName}, #{item.jarAbsPath})
        </foreach>
    </insert>
    <select id="selectJarByAbsPath">
        SELECT jid, jar_name, jar_abs_path
        FROM jar_table
        WHERE jar_abs_path = #{jarAbsPath}
        ORDER BY jid ASC
    </select>
    <select id="selectAllJars">
        SELECT DISTINCT jar_abs_path
        FROM jar_table
        ORDER BY jar_abs_path COLLATE NOCASE ASC
    </select>
    <select id="selectAllJarNames">
        SELECT DISTINCT jar_name
        FROM jar_table
        ORDER BY jar_name COLLATE NOCASE ASC
    </select>
    <select id="selectAllJarMeta" resultType="JarEntity">
        SELECT jid, jar_name, jar_abs_path
        FROM jar_table
        ORDER BY jid ASC
    </select>
    <select id="selectJarById">
        SELECT jid, jar_name, jar_abs_path
        FROM jar_table
        WHERE jid = #{jarId}
        ORDER BY jid ASC
        LIMIT 1
    </select>
</mapper>
